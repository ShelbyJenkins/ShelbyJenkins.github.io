{
	"name": "Rust WebDev",
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {"version": "latest"},
		"ghcr.io/devcontainers/features/node:1": {"version": "latest"}
	},
	"build": {
		"dockerfile": "Dockerfile"
	},
	"onCreateCommand": "chmod +x .devcontainer/postCreateCommand.sh",
	"postCreateCommand": "/workspaces/blog/.devcontainer/postCreateCommand.sh",
    "remoteUser": "root",
    "customizations": {
		"vscode": {
			"settings": {
				"lldb.executable": "/usr/bin/lldb",
				"files.watcherExclude": {
					"**/target/**": true
				},
				"rust-analyzer.checkOnSave.command": "clippy"
			},
			"extensions": [
				"vadimcn.vscode-lldb",
				"rust-lang.rust-analyzer",
				"tamasfe.even-better-toml",
				"serayuzgur.crates",
				"github.vscode-pull-request-github",
				"github.vscode-github-actions",
				"github.copilot",
				"github.copilot-chat",
				"d-koppenhagen.file-tree-to-text-generator",
				"bradlc.vscode-tailwindcss",
			]
		}
	}
}
