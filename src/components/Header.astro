---
import HeaderLink from './HeaderLink.astro';
import ThemeIcon from './ThemeIcon.astro';
import { FIRST_NAME, FULL_NAME } from '../consts';
---

<header class="w-full text-5xl lg:text-3xl">
	<nav class="flex items-center justify-between py-4">
		<div>
			<HeaderLink class="inline-block lg:hidden" href="/">{FIRST_NAME}</HeaderLink>
			<HeaderLink class="hidden lg:inline-block" href="/">{FULL_NAME}</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/easy-a-b-c">EasyABC</HeaderLink>
		</div>
		<ThemeIcon />
	</nav>
</header>
<div class="pb-6"></div>
<style>
	header {
		background: var(--background-color);
	}
</style>

