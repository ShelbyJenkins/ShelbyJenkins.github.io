---
import { Icon } from 'astro-icon/components'
import { FIRST_NAME, LINKEDIN_URL, TWITTER_URL, GITHUB_URL} from '../siteConfig';
// See https://github.com/natemoo-re/astro-icon
// and https://icon-sets.iconify.design/ for more icons
---

<nav >
    <div class="grid grid-flow-col gap-4">
        <a href={LINKEDIN_URL} target="_blank">
            <Icon name="mdi:linkedin"/>
        </a>    
        <a href={TWITTER_URL} target="_blank">
            <Icon name="mdi:twitter"/>
        </a>    
        <a href={GITHUB_URL} target="_blank">
            <Icon name="mdi:github"/>
        </a>
    </div>
    <div class="divider divider-neutral w-full ">Follow {FIRST_NAME}</div>
</nav>

<style>
	.social-links {
		text-decoration: none;
        display: flex;
        flex-direction: column;
       
	}
    [data-icon] {
        text-decoration: none;
        @apply w-20 lg:w-12;
        @apply text-accent-color-100;
        height: auto;
    }
    [data-icon]:hover {
        @apply text-accent-color-900;
    }
</style>