---
import BaseHead from '@components/BaseHead.astro';
import Navbar from '@components/navbar/Navbar.astro';
import { formatDescription } from '@utils/abbreviateDescription';
import ThemeIcon from '@components/navbar/ThemeIcon.astro';
import ShareIcon from '@components/navbar/ShareIcon.astro';
import Footer from '@components/Footer.astro';
const { pageTitle, pageDescription, publishedDate, modifiedDate, heroImage, heroImagePath, heroAlt, body } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead
			pageTitle={pageTitle}
			pageDescription={await formatDescription(pageDescription, body)}
			heroImage={heroImage}
			heroImagePath={heroImagePath}
			heroAlt={heroAlt}
			publishedDate={publishedDate}
			modifiedDate={modifiedDate}
		/>
	</head>
	<body>
		<header>
			<Navbar />
			<ThemeIcon />

			<div class="sm:hidden">
				<ShareIcon mode="desktop" />
			</div>
		</header>
		<main>
			<slot />
			<div class="mb-0 mt-auto md:hidden lg:hidden">
				<Footer />
			</div>
		</main>
	</body>
</html>
