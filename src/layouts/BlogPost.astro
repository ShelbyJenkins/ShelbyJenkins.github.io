---
import FormattedDate from '../components/FormattedDate.astro';
import { Image } from 'astro:assets';
import { formatDescription } from '../utils/abbreviateDescription';
import BaseLayout from './BaseLayout.astro';

const { title, description, pubDate, updatedDate, heroImage, heroAlt, body, readingTime } = Astro.props;
---

<BaseLayout
	page_title={title}
	page_description={await formatDescription(description, body)}
	heroImage={heroImage}
	heroAlt={heroAlt}
	pubDate={pubDate}
	updatedDate={updatedDate}
>
	<article>
		<div class="w-7/12 p-1">
			{heroImage && <Image style="box-shadow: var(--box-shadow);" src={heroImage} alt={heroAlt || ''} />}
		</div>
		<div class="flex flex-col pt-8">
			<h1 class="text-4xl">{title}</h1>
			<div class="text-l flex items-center space-x-4 pb-5 pl-2 pt-4 text-sm">
				<div>{readingTime}</div>
				<div>Â·</div>
				<div>
					Published on
					<FormattedDate date={pubDate} />
				</div>
				<div class="italic">
					{
						updatedDate && (
							<>
								Updated on
								<FormattedDate date={updatedDate} />
							</>
						)
					}
				</div>
			</div>
		</div>
		<div id="article-text" class="prose prose-customTheme max-w-none">
			<slot />
		</div>
	</article>
</BaseLayout>
