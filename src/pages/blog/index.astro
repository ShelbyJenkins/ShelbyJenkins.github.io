---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import { Image } from 'astro:assets';

const posts = (await getCollection('blog')).sort((a, b) => {
    // Use updatedDate if available, otherwise fall back to pubDate
    const dateA = a.data.updatedDate ? new Date(a.data.updatedDate) : new Date(a.data.pubDate);
    const dateB = b.data.updatedDate ? new Date(b.data.updatedDate) : new Date(b.data.pubDate);
    // Sort in descending order (newest first)
    return dateB.valueOf() - dateA.valueOf();
});
const heroImage = posts.length > 0 ? posts[0].data.heroImage : undefined;
const heroAlt = posts.length > 0 ? posts[0].data.heroAlt : undefined;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} heroImage={heroImage} heroAlt={heroAlt}/>
		<style lang="scss">	
			main {
				width: 66vw;
			}
			ul {
				display: flex;
				flex-direction: column;
				/* gap: 0.5rem; */
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
		
			ul li a {
				display: flex;
				justify-content: space-between;
				align-items: center;
				height: 22vh;
				padding: 0.22em;
			}
			.post-details {
				display: flex;
				flex-direction: column;
				align-content: flex-start;
				flex-shrink: 0;
				width: 63%;
				height: 100%;
				color: var(--font-color);
				margin-right: 1em;
			}
			.title {
				color: var(--font-color);
				line-height: 1;
				margin-bottom: 0.25em;
				
			}
			.description {
				overflow: hidden;
				line-height: 1.2; 
				display: -webkit-box;
				-webkit-line-clamp: 4; /* Number of lines you want */
				-webkit-box-orient: vertical;
				margin: 0;
			}
			.date {
				margin-bottom: 0;
				line-height: 1.3;
				font-size: 0.8em;
			}
			.hero-image {
				display: flex;
				justify-content: center;
				align-items: center;
				height: 100%;
				width:auto;
				
			}
			.hero-image img {
				max-height: 90%;
				width: auto;
			}

			a:hover h4 {
				color: var(--accent);
			}
			a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				main {
				width: 95vw;
				}
				h4 {
					font-size: 1.3em;
				}
				.date {
					font-size: 0.8em;
				}
				.description {
					-webkit-line-clamp: 3; /* Number of lines you want */
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						posts.map((post) => {
							const filename = post.slug.split('/').pop();
							return (
								<li>
									<a href={`/blog/${filename}/`}>
										<div class="post-details">
											<p class="date">
												<FormattedDate date={post.data.pubDate} />
											</p>
											<h4 class="title">{post.data.title}</h4>
											<p class="description">{post.body}</p>
										</div>
										<div class="hero-image">
											{
												post.data.heroImage &&
												<Image src={post.data.heroImage} alt={post.data.heroAlt || ''} />
											}
										</div>
									</a>
								</li>
								<hr />
							);
						})
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>	
</html>
