---
import { easyConfig } from '@utils/easyConfig';
import Carousel from '@components/Carousel.astro';
import BaseLayout from '@layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';
const headshotPath = await easyConfig.headshotPath;
---

<BaseLayout pageTitle={easyConfig.siteTitle} pageDescription={easyConfig.siteDescription} heroAlt={easyConfig.headshotAlt}>
	<div class="flex flex-col items-center justify-start sm:w-full sm:pt-8 md:h-full md:w-8/12">
		<Carousel />
		<div
			class="mt-4 flex w-full rounded-xl border-4 border-semantic-on-surface-variant p-4 sm:flex-col sm:items-center sm:justify-center md:h-[35%] md:flex-row lg:h-[25%]"
		>
			<div class="sm:min-h-2/6 sm:max-h-3/6 flex rounded-xl sm:w-7/12 md:h-full md:w-2/12">
				<img src={headshotPath} alt={easyConfig.headshotAlt} class="w-full rounded-xl object-cover" />
			</div>
			<div class="mx-auto flex flex-col justify-between sm:w-full sm:items-center sm:pt-3 md:h-full md:w-9/12 md:pl-8">
				<div class="flex flex-col sm:items-center">
					<p class="text-xl font-bold text-semantic-on-surface-variant">{`About ${easyConfig.firstName}`}</p>
					<p class="line-clamp-3 whitespace-pre-wrap pt-3 sm:text-sm">{easyConfig.aboutMe}</p>

					<div class="flex items-center justify-start gap-2 pt-3 text-2xl text-semantic-on-surface-variant">
						<span class="text-xs">Connect:</span>
						{
							Object.entries(easyConfig.socialMedia).map(([key, value]) =>
								value ? (
									<a href={value} class="hover:text-semantic-secondary">
										<Icon name={`mdi:${key}`} />
									</a>
								) : null
							)
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</BaseLayout>
